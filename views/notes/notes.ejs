<%- include('../partials/header') -%>

    <div class="container notebook">
        <h1>Your Notes</h1>
        <hr>

        <% for(let note of notes) { %>
            <article>
                <h4>
                    <a href="/notes/<%= note._id %>">
                        <%= note.title %>
                    </a>

                </h4>
                <h6>
                    Created By: <%=note.author %>
                </h6>

                <p>

                    <%=note.content %>

                </p>
                <p>
                    <small>Tags: <%= note.tags %></small> <br>
                    <small>Date Created: <%=note.dateCreated %></small>
                </p>

                <p> <a class="btn btn-primary" href="notes/<%=note._id%>/edit">Edit</a>
                </p>
                <hr>
            </article>
            <% } %>

    </div>

    <%- include('../partials/footer') -%>